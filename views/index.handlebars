
<div class="jumbotron">

  <p class="lead">This is Harvey</p>
  <h3 class="display-6">Harvey is Hungry</h2>
  <h1 class="display-2">Feed Harvey</h1>
  
</div>

<div class="container">

  <div class="row mx-auto">

    <div class="col col-submit">

      {{!-- <h3>Add food for Harvey:</h3> --}}
          
      <form class="">

        <div class="form-group">

          <textarea type="text" id="food" rows="2"></textarea>
        
        </div>

      </form>

      <button class="btn btn-info" type="button">Add food</button>
        
    </div>
      
  </div>
  
  <div class="row">
    

    {{!-- Col Not-Devoured --}}

        <div class="col-4">
          {{!-- add list of items that have not been devoured here --}}
          {{!-- when a database item devoured is marked as false, goes in this space --}}

          <h4>To feed:</h4>

          <ol>
            {{!-- Use each to display every item in the [insertname] array --}}
            {{#each burgersObj }}
            {{#unless devoured}}

            <li>{{ burger_name }}</li>

             {{/unless}}

            {{/each}}

          </ol>
        
        </div>


         {{!-- Column Harvey --}}
      
      {{!-- https://happydorid.tumblr.com/post/148484344109/plant-friend --}}

      <div class="col-4">

        <img id="harvey" src="/assets/images/harvey.jpg">

      </div>


        {{!-- Col Devoured --}}

        <div class="col-4">

          {{!-- add list of items that have not been devoured here --}}
          {{!-- when a database item devoured is marked as false, goes in this space --}}

          <h4>Fed:</h4>

          <ol>
            {{!-- Use each to display every item in the [insertname] array --}}
            {{#each burgersObj }}
              {{#if devoured}}
                <li>{{ burger_name }}</li>
              {{/if}}
            {{/each}}

            {{!-- <hr> --}}
          </ol>

        </div>


  {{!-- end row --}}
  </div>


</div>
