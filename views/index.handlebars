
<div class="jumbotron">

  <p class="lead">This is Harvey</p>
  <h3 class="display-6">Harvey is Hungry</h2>
  <h1 class="display-2">Feed Harvey</h1>

  <div id="forminput" class="justify-content-center">
    
    <form class="form input">

        {{!-- <div class="form-group">

          <textarea type="text" id="food" rows="2"></textarea>
        
        </div> --}}

        <div class="input-group">
          
          <input class="form-control">

          <span class="input-group-btn">
              <button class="btn btn-info" type="button">Add to Feed</button>
          </span>
        </div>

      </form>

  </div>



  
